root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = tab
insert_final_newline = true
max_line_length = 80
tab_width = 2
trim_trailing_whitespace = true

[*.css]
indent_size = 2
indent_style = space
tab_width = 2

[{*.ats,*.ts}]
indent_size = 2
indent_style = space
tab_width = 2

[{*.cjs,*.js}]
indent_style = space

[{*.htm,*.html,*.ng,*.sht,*.shtm,*.shtml}]
indent_style = space
